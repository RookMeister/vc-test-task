{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@interfaces/*": ["./src/interfaces/*"],
    },
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ],
}